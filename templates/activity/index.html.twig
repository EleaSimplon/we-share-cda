{% extends 'base.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
    <h1>Activity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Address</th>
                <th>Phone_number</th>
                <th>Schedule</th>
                <th>Duration</th>
                <th>Name</th>
                <th>City</th>
                <th>Country</th>
                <th>Published_at</th>
                <th>Picture</th>
                <th>Price</th>
                <th>Description</th>
                <th>Short_description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.company }}</td>
                <td>{{ activity.address }}</td>
                <td>{{ activity.phoneNumber }}</td>
                <td>{{ activity.schedule }}</td>
                <td>{{ activity.duration }}</td>
                <td>{{ activity.name }}</td>
                <td>{{ activity.city }}</td>
                <td>{{ activity.country }}</td>
                <td>{{ activity.publishedAt ? activity.publishedAt|date('Y-m-d') : '' }}</td>
                <td>{{ activity.picture }}</td>
                <td>{{ activity.price }}</td>
                <td>{{ activity.description }}</td>
                <td>{{ activity.shortDescription }}</td>
                <td>
                    <a href="{{ path('app_activity_show', {'id': activity.id}) }}">show</a>
                    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_new') }}">Create new</a>
{% endblock %}
